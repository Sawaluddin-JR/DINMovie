@using DINMovie.Data.Enums;
@using DINMovie.Data.ViewModels;
@model NewMovieVM

@{
    ViewData["Title"] = "Create a new movie";
}

<style>
    .btn-outline-success {
        border-color: #28a745;
        color: #28a745;
    }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }
</style>

<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-10">
            <h4 class="text-center mb-4">Create a new movie</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control border-2" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control border-2" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control border-2" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" type="number" class="form-control border-2" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ImageURL" class="form-label"></label>
                            <input asp-for="ImageURL" class="form-control border-2" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CinemaId" class="form-label"></label>
                            <select asp-for="CinemaId" class="form-select border-2" asp-items="ViewBag.Cinemas"></select>
                            <span asp-validation-for="CinemaId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="MovieCategory" class="form-label"></label>
                            <select asp-for="MovieCategory" class="form-select border-2" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                            <span asp-validation-for="MovieCategory" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ProducerId" class="form-label"></label>
                            <select asp-for="ProducerId" class="form-select border-2" asp-items="ViewBag.Producers"></select>
                            <span asp-validation-for="ProducerId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ActorIds" class="form-label"></label>
                            <select asp-for="ActorIds" class="form-select border-2" asp-items="ViewBag.Actors" multiple></select>
                            <span asp-validation-for="ActorIds" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control border-2"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3 text-center">
                    <img width="25%" id="ImageUrlPreview" alt="Image Preview" style="border-radius: 10px;">
                </div>

                <div class="mb-3">
                    <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}